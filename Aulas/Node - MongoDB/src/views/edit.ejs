<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs')%>
    <body>
    
        <h1><%= title%></h1>
        <%- include('partials/navbar.ejs')%>

        <% if (typeof message !== 'undefined') {%>
            <%= message %>
        <% } %>

        <form action="/edit/<%= user._id%>" method="POST">
            <div>
                <label>
                    <input type="text" name="name" placeholder="Digite seu nome..." value="<%= user.name%>">
                </label>
            </div>
            <div>
                <label>
                    <input type="number" name="age" placeholder="Digite sua idade..." value="<%= user.age%>">
                </label>
            </div>
            <div>
                <label>
                    <input type="email" name="email" placeholder="Digite seu email..." value="<%= user.email%>">
                </label>
            </div>
            <button type="submit">Cadastrar</button>
        </form>
    </body>
</html>